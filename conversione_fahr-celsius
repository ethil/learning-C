//conversione interattiva fahrenheit celsius

#include <stdio.h>
#include <stdbool.h>
    
float celsius(float n);
float fahr(float n);


int main(void){
    float f, c, n;
    char u; /* unita' */
    bool input=false;

    printf("convertitore celsius - fahrenheit\ninserire la temperatura da convertire: (es. 10 c)\n");

        do{
            scanf("%f %s",&n,&u);
                if(u=='c'||u=='f')
                    input=true;
                else
                    printf("\nriscrivere l'input nel modo corretto: ");
        
        }while(input==false);

        if(u=='f')
            printf("%.1f f = %.1f c\n",n,celsius(n));
        else
            printf("%.1f c = %.1f f\n",n,fahr(n));

    return 0;
}

/* ========================== */

float celsius(float n){
    float c;
    c=(n-32)*1.8;

    return c;
}

float fahr(float n){
    float f;
    f=n/1.8+32;

    return f;
}
